{
  "compilerOptions": {
    "target": "ES2018"
  , "module": "NodeNext"
  , "moduleResolution": "NodeNext"
  , "strict": true
  , "noUnusedLocals": true
  , "noUnusedParameters": false
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@error": ["src/shared/error"]
    , "@functions/*": ["src/functions/*"]
    , "@classes/*": ["src/classes/*"]
    , "@test/*": ["__tests__/*"]
    }
  , "plugins": [
      { "transform": "typescript-transform-paths" }
    , { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  }
}
